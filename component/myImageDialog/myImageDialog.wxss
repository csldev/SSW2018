/* component/myImageDialog/myImageDialog.wxss */
.btn{
  width:80%;
  padding: 20rpx 0;
  border-radius:10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color:#fff;
}

.d_screen{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left: 0;
  z-index:1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box{
  width:650rpx;
  overflow: hidden;
  position:fixed;
  top:20%;
  left: 0;
  z-index:1001;
  background: #FAFAFA;
  margin: -150rpx 50rpx 0 50rpx;
  border-radius: 3px;
}


.drawer_title{
  padding:15px;
  font:20px "mcrosoft yahei";
  text-align: center;
}

.drawer_content{
  height:700rpx;
  overflow-y: scroll;
}

.bottom_view{  
  flex-direction: row;
  display: flex;
  padding: 10px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
  border-top: 1px solid #E8E8EA;  
  color: #3CC51F;  
}  
  
.bottom_btn{
  border-width: medium;
  border-color: black;
}

